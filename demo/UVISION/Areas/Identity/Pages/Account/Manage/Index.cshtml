@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<br/>
<h3 style="text-align: center">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row d-flex justify-content-center">
    <div class="col-md-6 col-xl-4">
        <div class="card-body text-center d-flex flex-column align-items-center">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <input asp-for="Username" class="form-control" disabled/>
                </div>
                <div class="mb-3">
                    <input asp-for="Input.PhoneNumber" placeholder="Phone Number" class="form-control"/>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button id="update-profile-button" type="submit" class="btn btn-primary shadow d-block w-100">Save</button>
                </div>
            </form>
       </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
